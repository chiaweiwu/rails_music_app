<div class="container">
  <div class="wrapper-form">
    <h1>New User</h1>

    <form action="<%= users_url %>" method="post">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <p>
        <input id='user-email' type="text" name="user[email]" placeholder="E-mail">
      </p>

      <p>
        <input id='user-password' type="password" name="user[password]" placeholder="Password">
      </p>

      <input type="submit" value="Submit">
      <br>
      <a class="sign-up" href=<%= new_session_url %> >Sign-in Instead</a>
    </form>
  </div>
</div>
